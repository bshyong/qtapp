= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %h3 Sign up
  .row
    = f.error_notification
    = display_base_errors resource
    .form-group
      = f.input :name, :autofocus => true, label: false, placeholder: "Name", input_html: {class: "form-control input-lg"}
      = f.input :email, :required => true, label: false, placeholder: "Email", input_html: {class: "form-control input-lg"}
      = f.input :password, :required => true, label: false, placeholder: "Password", input_html: {class: "form-control input-lg"}
      = f.input :password_confirmation, :required => true, label: false, placeholder: "Password confirmation", input_html: {class: "form-control input-lg"}
      = f.button :submit, 'Sign up', :class => 'btn-primary col-xs-12'
  .row
    = render "devise/shared/links"