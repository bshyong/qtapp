= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  %h3 Edit #{resource_name.to_s.humanize}
  .row
    .col-xs-12.panel
      = f.error_notification
      = display_base_errors resource
      .form-group
        = f.input :name, :autofocus => true, placeholder: "Name", input_html: {class: "form-control input-lg"}
        = f.input :email, :required => true, placeholder: "Email", input_html: {class: "form-control input-lg"}
        = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, placeholder: "New password", input_html: {class: "form-control input-lg"}
        = f.input :password_confirmation, :required => false, placeholder: "New password confirmation", input_html: {class: "form-control input-lg"}
        = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, placeholder: "Current password", input_html: {class: "form-control input-lg"}
  .row
    = link_to "Back", settings_path, class: "btn btn-default col-xs-6"
    = f.button :submit, 'Update', :class => 'btn-primary col-xs-6'
