= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h3 Sign in
  .row
    .form-group
      = f.input :email, :autofocus => true, label: false, placeholder: "Email", input_html: {class: "form-control input-lg"}
      = f.input :password, label: false, placeholder: "Password", input_html: {class: "form-control input-lg"}
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, "Sign in", :class => 'btn-primary col-xs-12'
  .row
    = render "devise/shared/links"
